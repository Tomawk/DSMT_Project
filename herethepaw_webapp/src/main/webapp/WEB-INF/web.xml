<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>UserSearchServlet</servlet-name>
    <servlet-class>
      it.unipi.dsmt.servlet.UserSearchServlet
    </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserListServlet</servlet-name>
    <servlet-class>
      it.unipi.dsmt.servlet.UserListServlet
    </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>
      it.unipi.dsmt.servlet.LoginServlet
    </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>
      it.unipi.dsmt.servlet.LogoutServlet
    </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BookingServlet</servlet-name>
    <servlet-class>
      it.unipi.dsmt.servlet.BookingServlet
    </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>NewReviewServlet</servlet-name>
    <servlet-class>
      it.unipi.dsmt.servlet.NewReviewServlet
    </servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ConfirmationServlet</servlet-name>
    <servlet-class>
      it.unipi.dsmt.servlet.ConfirmationServlet
    </servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ConfirmationServlet</servlet-name>
    <url-pattern>/confirm_booking</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BookingServlet</servlet-name>
    <url-pattern>/book_petsitter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserSearchServlet</servlet-name>
    <url-pattern>/search_user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserListServlet</servlet-name>
    <url-pattern>/UserListServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>NewReviewServlet</servlet-name>
    <url-pattern>/new_review</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/pages/404.html</location>
  </error-page>
</web-app>
